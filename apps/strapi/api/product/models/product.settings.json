{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "content": {
      "type": "richtext"
    },
    "meta_description": {
      "type": "text"
    },
    "meta_title": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "category": {
      "model": "product-category"
    }
  }
}
